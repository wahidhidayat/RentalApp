<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">
    tools:context=".Update_Cars">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="Update and Delete Data"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="key"
        android:id="@+id/key"/>

    <EditText
        android:id="@+id/rName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Mobil"
        android:inputType="text" />
    <EditText
        android:id="@+id/rDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detail"
        android:inputType="text" />

    <EditText
        android:id="@+id/rHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga"
        android:inputType="text" />

    <EditText
        android:id="@+id/rNoPlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No Plat"
        android:inputType="text" />

    <EditText
        android:id="@+id/rTahunProduksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TahunProduksi"
        android:inputType="text" />




    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />


</LinearLayout>